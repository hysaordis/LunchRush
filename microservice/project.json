{
  "name": "microservice",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "microservice",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "main": "{projectRoot}/main.go"
      }
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/main.go"
      }
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "dapr": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dapr run --app-id lunchrush-microservice --app-port 8080 --dapr-http-port 3500 --resources-path ./components ./microservice/lunchrush.exe"
      }
    }
  }
}
